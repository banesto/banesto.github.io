---
layout: null
---
{
  {% for post in site.posts %}

    "{{ post.url | slugify }}": {
      "title":      "{{ post.title | xml_escape }}",
      "url":        "{{ post.url | xml_escape }}",
      "content":    "{{ post.content | strip_html | strip_newlines | remove:  "  " | escape | remove: "\" }}",
      "category":   "{{ post.categories | join: ' ' }}",
      "date":       "{{ post.date }}"
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
}